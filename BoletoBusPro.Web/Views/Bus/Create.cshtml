@model BoletoBusPro.Web.Models.Bus.BusSaveModel

@{
    ViewData["Title"] = "Crear Bus";
}

<h1>Crear Bus</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroPlaca" class="control-label"></label>
                <input asp-for="NumeroPlaca" class="form-control" />
                <span asp-validation-for="NumeroPlaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadPiso1" class="control-label"></label>
                <input asp-for="CapacidadPiso1" class="form-control" />
                <span asp-validation-for="CapacidadPiso1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadPiso2" class="control-label"></label>
                <input asp-for="CapacidadPiso2" class="form-control" />
                <span asp-validation-for="CapacidadPiso2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadTotal" class="control-label"></label>
                <input asp-for="CapacidadTotal" class="form-control" />
                <span asp-validation-for="CapacidadTotal" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Disponible" /> @Html.DisplayNameFor(model => model.Disponible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
